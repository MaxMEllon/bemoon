{
  "compileOnSave": false,
  "buildOnSave": false,
  "compilerOptions": {
    "alwaysStrict": true,
    "target": "es2015",
    "lib": ["dom", "es2015", "es6", "es7"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals" : true,
    "outDir": "./dist/",
    "sourceMap": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "removeComments": true
  },
  "typeRoots": [ ],
  "exclude": [
    "node_modules"
  ]
}
